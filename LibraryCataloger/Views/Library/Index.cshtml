@model List<BookEntity>

<div class="container">
<div class="row pt-1 pb-1">
	<div class="col-5">
		<h2 class="text">
			Your Library
		</h2>
	</div>
		<div class="col-2 offset-5" text-end>
			<a asp-controller="Library" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add New Book
			</a>
		</div>
	</div>
	<div class="col-12 position-relative end-0">
	<table class="table table-sm table-bordered table-striped ">
		<thead>
			<tr>
				<th>
					Title
				</th>
				<th>
					Author
				</th>
				<th>
					Description
				</th>
				<th>
					ISBN
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var book in Model.OrderBy(book => book.Title))
			{
				<tr>
					<td>
						@book.Title
					</td>
					<td>
						@book.Author
					</td>
					<td>
						@book.Description
					</td>
					<td>
						@book.Isbn
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Library" asp-action="Edit" asp-route-bookId="@book.BookID" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Library" asp-action="Delete" asp-route-bookId="@book.BookID" class="btn btn-danger mx-2">
								<i class="bi bi-trash3-fill"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
	</div>
</div>