@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to LibraryCataloger</h1>
    <p>To get started:</p>
    <div class="text-center" text-end>
        <a asp-controller="Library" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Book
        </a>
    </div>
    <p>
    <p>To View Existing Books:</p>
    </p>
    <div class="text-center" text-end>
    <a asp-controller="Library" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> View Your Library
    </a>
    <a asp-controller="ToBeReadList" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> View Your To Be Read List
    </a>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
